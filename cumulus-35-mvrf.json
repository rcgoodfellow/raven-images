{
  "builders": [{
    "type": "qemu",
    "accelerator": "kvm",
    "iso_url": "base/cumulus-linux-3.5.0-vx-amd64.qcow2",
    "disk_image": true,
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "{{user `build_dir`}}",
    "vm_name": "{{user `vm_name`}}",
    "disk_size": "{{user `disk_size`}}",
    "format": "qcow2",
    "disk_compression": true,
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "15s",
    "boot_command": [
      "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
      "cumulus<enter>",
      "CumulusLinux!<enter>",
      "sudo su<enter>",
      "CumulusLinux!<enter>",
      "net add vrf mgmt<enter>",
      "net commit<enter>",
      "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
      "exit<enter>",
      "exit<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "cumulus",
    "ssh_password": "CumulusLinux!",
    "ssh_pty": "true",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"],
      ["-display", "gtk"],
      ["-vga", "cirrus"]
    ],
    "net_device": "virtio-net",
    "disk_interface": "virtio"
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "{{.Vars}} echo 'CumulusLinux!' | sudo -S '{{.Path}}'",
    "scripts": [
      "scripts/cumulus/rvn.sh",
      "scripts/cumulus/dosudo.sh",
      "scripts/cumulus/apt.sh",
      "scripts/common/rvn.sh",
      "scripts/common/sshd.sh",
      "scripts/cumulus/cleanup.sh",
      "scripts/cumulus/expand.sh",
      "scripts/common/minimize.sh"
        ]
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "4",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "0ac2463317c3fc427ae7f45a78c0b156d45a6f6dc98f2db61677e06de3a63334",
    "iso_checksum_type": "sha256",
    "memory": "4096",
    "ssh_timeout": "60m",
    "vm_name": "cumulusvx-3.5-mvrf",
    "build_dir": "build/cumulus/3.5-mvrf"
  }
}
